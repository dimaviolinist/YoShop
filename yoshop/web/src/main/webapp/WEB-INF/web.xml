<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:jsp="http://java.sun.com/xml/ns/javaee/jsp" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" id="WebApp_ID" version="2.5">
  <display-name>YoShop</display-name>
   <error-page>   
    <error-code>404</error-code>
    <location>/error.jsp</location>
  </error-page>
  <!-- Filters -->
  <filter-mapping>
  	<filter-name>RememberMeFilter</filter-name>
	<servlet-name>*</servlet-name>	
  </filter-mapping>
  <filter>
	<filter-name>RememberMeFilter</filter-name>
	<filter-class>by.itacademy.training.yoshop.filters.RememberMeFilter</filter-class>
  </filter>
  <filter-mapping>
  	<filter-name>AdminPageFilter</filter-name>
	<servlet-name>AdminController</servlet-name>
	<servlet-name>BlackListController</servlet-name>
  </filter-mapping>
  <filter>
	<filter-name>AdminPageFilter</filter-name>
	<filter-class>by.itacademy.training.yoshop.filters.AdminPageFilter</filter-class>
  </filter>
  <!-- Listeners -->
  <listener>
    <listener-class>by.itacademy.training.yoshop.listeners.ServletListener</listener-class>
  </listener>
  <listener>
    <listener-class>by.itacademy.training.yoshop.listeners.SessionListener</listener-class>
  </listener>
  <!-- Controllers -->
  <servlet>
    <servlet-name>AccountController</servlet-name>
    <servlet-class>by.dimaviolinist.yoshop.controllers.AccountController
        </servlet-class>
  </servlet>
  <servlet>
    <servlet-name>AdminController</servlet-name>
    <servlet-class>by.itacademy.training.yoshop.controllers.AdminController
        </servlet-class>
  </servlet>
  <servlet>
    <servlet-name>BlackListController</servlet-name>
    <servlet-class>by.itacademy.training.yoshop.controllers.BlackListController
        </servlet-class>
  </servlet>
  <servlet>
    <servlet-name>LogoutController</servlet-name>
    <servlet-class>by.itacademy.training.yoshop.controllers.LogoutController
        </servlet-class>
  </servlet>
  <servlet>
    <servlet-name>LoginController</servlet-name>
    <servlet-class>by.itacademy.training.yoshop.controllers.LoginController
        </servlet-class>
  </servlet>
  <servlet>
    <servlet-name>OrderController</servlet-name>
    <servlet-class>by.itacademy.training.yoshop.controllers.OrderController
        </servlet-class>
  </servlet>
  <servlet>
    <servlet-name>UserManagerController</servlet-name>
    <servlet-class>by.itacademy.training.yoshop.controllers.UserManagerController
        </servlet-class>
  </servlet>
  <servlet>
    <servlet-name>RegistrationController</servlet-name>
    <servlet-class>by.itacademy.training.yoshop.controllers.RegistrationController
        </servlet-class>
  </servlet>
  
  <servlet-mapping>
    <servlet-name>AccountController</servlet-name>
    <url-pattern>/Account</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>AdminController</servlet-name>
    <url-pattern>/AdminPage</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>BlackListController</servlet-name>
    <url-pattern>/BlackList</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>LogoutController</servlet-name>
    <url-pattern>/Logout</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>LoginController</servlet-name>
    <url-pattern>/Login</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>OrderController</servlet-name>
    <url-pattern>/Order</url-pattern>
  </servlet-mapping> 
  <servlet-mapping>
    <servlet-name>UserManagerController</servlet-name>
    <url-pattern>/UserManager</url-pattern>
  </servlet-mapping>  
  <servlet-mapping>
    <servlet-name>RegistrationController</servlet-name>
    <url-pattern>/Registration</url-pattern>
  </servlet-mapping>
  
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
    <welcome-file>index.jsp</welcome-file>
  </welcome-file-list>
  
  <jsp-config>
    <taglib>
      <taglib-uri>/WEB-INF/tld/jsp-decorator.tld</taglib-uri>
      <taglib-location> 
     	 /WEB-INF/tld/jsp-decorator.tld 
     </taglib-location>
    </taglib>
  </jsp-config>
  
</web-app>